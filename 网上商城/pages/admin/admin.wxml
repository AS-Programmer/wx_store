<scroll-view scroll-y style='height:100vh;'>
	<view class='top'>
		<view class="content">
			<image class="img" src="../../images/admin_pic.png"></image>
			<view><text>管理员：{{admin}}</text></view>
			<view class="btn">
				<button size="mini" type="primary" bindtap="updPassword">修改密码</button>
				<button size="mini" type="primary" bindtap="logout">退出</button>
			</view>
		</view>

	</view>

	<view class="menu">
		<view class="menu-item" bindtap="orderManagement">
			<image class="iconfont" src="../../images/order_manager.png"></image>
			<text>订单管理</text>
		</view>
		<view class="menu-item" bindtap="sortManagement">
			<image class="iconfont" src="../../images/sort_manager.png"></image>
			<text>分类管理</text>
		</view>
		<view class="menu-item" bindtap="goodsManagement">
			<image class="iconfont" src="../../images/goods_manager.png"></image>
			<text>商品管理</text>
		</view>
	</view>
</scroll-view>

<modal class="updPassword" hidden="{{hidde}}" title="请在此处修改密码" confirm-text="确认" cancel-text="取消" bindcancel="modalinput" bindconfirm="updPassWord">
	原密码：<input type="password" bindinput="oldpassword"></input>
	新密码：<input type="password" bindinput="newpassword"></input>
	确认密码：<input type="password" bindinput="confirmpassword"></input>
</modal>