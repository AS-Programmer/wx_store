<view class='main'>
  <view class='tab'>
    <view bindtap='tabFun' data-index="{{1}}">
      <text class='{{tabIndex==1?"active":""}}'>待付款</text>
    </view>
    <view bindtap='tabFun' data-index="2">
      <text class='{{tabIndex==2?"active":""}}'>待发货</text>
    </view>
    <view bindtap='tabFun' data-index="3">
      <text class='{{tabIndex==3?"active":""}}'>已发货</text>
    </view>
    <view bindtap='tabFun' data-index="4">
      <text class='{{tabIndex==4?"active":""}}'>已完成</text>
    </view>
  </view>
  <scroll-view scroll-y class='list'>
      <view class='item' wx:if="{{tabIndex == 2}}" wx:for="{{list}}" wx:key="index">
      <navigator class='content' hover-class="none" url="/pages/details/details?id={{item.goods_id}}">
        <image src='{{item.img}}'></image>
        <view class='text'>
          <view class='title'>共{{item.num}}件商品</view>
          <view class='spec'>{{item.spec}}</view>
          <view class='price'>
            <text>¥{{item.price}}</text>
          </view>
        </view>
      </navigator>
    </view>

    <view class='item' wx:if="{{tabIndex == 3}}" wx:for="{{list}}" wx:key="index">
      <navigator class='content' hover-class="none" url="/pages/details/details?id={{item.goods_id}}">
        <image src='{{item.img}}'></image>
        <view class='text'>
          <view class='title'>{{item.title}}</view>
          <view class='orderNo'>订单编号：{{item.orderNo}}</view>
          <view class='price'>
            <text>共{{item.num}}件商品</text>
          </view>
        </view>
      </navigator>
      <view style="width:50px;"><text style="color:red;">待收货</text></view>
    </view>
    
  </scroll-view>
</view>