<scroll-view scroll-y style='height:100vh;'>
	<view class='top'>
		<view>
			<view bindtap="turnAdmin" class='img'>
				<open-data type="userAvatarUrl"></open-data>
			</view>
			<view class='text'>
				<open-data type="userNickName"></open-data>
			</view>
		</view>
	</view>
	<navigator url="/pages/orderDetails/orderDetails" class='item'>
		<view class='left'>
			我的订单
		</view>
		<view class='right'>
			<text>查看全部订单</text>
			<image src='/images/my_order.png'></image>
		</view>
	</navigator>
	<view class='icon'>
		<navigator url="/pages/orderDetails/orderDetails?type=1" hover-class="none">
			<image src='/images/pending_payment.png' mode="aspectFit"></image>
			<text>待付款</text>
		</navigator>
		<navigator url="/pages/orderDetails/orderDetails?type=2" hover-class="none">
			<image src='/images/pending_delivery.png' mode="aspectFit"></image>
			<text>待发货</text>
		</navigator>
		<navigator url="/pages/orderDetails/orderDetails?type=3" hover-class="none">
			<image src='/images/already_shipped.png' mode="aspectFit"></image>
			<text>待收货</text>
		</navigator>
		<navigator url="/pages/orderDetails/orderDetails?type=4" hover-class="none">
			<image src='/images/completed.png' mode="aspectFit"></image>
			<text>已完成</text>
		</navigator>
	</view>
	<navigator url="/pages/collection/collection" class='item'>
		<view class='left'>
			我的收藏
		</view>
		<view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</navigator>
	<navigator url="/pages/orderQuery/orderQuery" class='item'>
		<view class='left'>
			物流查询
		</view>
		<view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</navigator>
	<navigator url="/pages/addressList/addressList" class='item'>
		<view class='left'>
			收货地址管理
		</view>
		<view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</navigator>

	<navigator bindtap="contact" url="#" class='item'>
		<view class='left'>
			客服联系方式
		</view>
		<view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</navigator>
</scroll-view>